	<!-- 통계(반별 테스트 평균점수를 차트화) -->
	<!-- 검토필요 -->
	<select id="selectLessonScore" resultMap="test">
		SELECT TEST_CODE
			, TEST_DATE
			, SCORE
			, STUDENT_CODE
			, LESSON_INFO_CODE
		FROM TEST
		WHERE LESSON_INFO_CODE = #{lessonInfoCode}
	</select>
	
	
	
	
	
	
	<!-- 점수 수정  -->
	<update id="updateScore">
		UPDATE TEST
		SET
		SCORE = #{score}
		WHERE TEST_CODE = #{testCode}
	</update>
	
	
	<!-- 점수 삭제 -->
	<delete id="deleteScore">
		DELETE TEST
		WHERE TEST_CODE = #{testCode}
	</delete>


	
